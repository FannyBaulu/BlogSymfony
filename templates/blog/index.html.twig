{% extends 'base.html.twig' %}

{% block body %}


    <h1 class="text-center">Blog</h1>

    <a class="m-2 btn btn-outline-primary" href="{{ path("blog_create")}}">Publier un article</a>


    <div class="d-flex row justify-content-center">
    {% for post in posts %}
        <div class="card border-info m-2 p-0" style="max-width: 18rem;">
            <div class="card-header">{{post.title}}</div>
            <img src="{{asset(post.image)}}" class="card-img-top" alt="{{post.title}}">
            <div class="card-body">
                <small class="card-title">{{post.publishedAt|date("d/m/Y")}}</small>
                <div class="card-text">

                    <p>{{post.content}}</p>
                    <small>{{post.comments|length}} commentaire(s)</small>
                </div>
                <a href="{{path("blog_read",{id:post.id})}}">Lire la suite</a> | <a href="{{path("blog_update",{id:post.id})}}">Modifier</a>
            </div>
        </div>
    {% endfor %}
    </div>

<nav aria-label="Page navigation example" class="mt-5">
    <ul class="pagination justify-content-center">
        {% if page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{path("home",{page:1})}}">Première page</a>
            </li>
        {% endif %}
        {% if page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{path("home",{page:page - 1})}}">Précédent</a>
            </li>
        {% endif %}
        {% for p in range %}
            <li class="page-item">
                <a class="page-link" href="{{path("home",{page:p})}}">{{p}}</a>
            </li>
        {% endfor %}
        {% if page < pages %}
            <li class="page-item">
                <a class="page-link" href="{{path("home",{page:page + 1})}}">Suivant</a>
            </li>
        {% endif %}
        {% if page < pages %}
            <li class="page-item">
                <a class="page-link" href="{{path("home",{page:pages})}}">Dernière page</a>
            </li>
        {% endif %}
    </ul>
</nav>   
{% endblock %}
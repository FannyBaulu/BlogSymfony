{% extends 'base.html.twig' %}

{% block body %}


    <h1 class="text-center">Blog</h1>

    <a href="{{ path("blog_create")}}">Publier un article</a>


    <div class="d-flex row justify-content-center">
    {% for post in posts %}
        <div class="card border-info m-2 p-0" style="max-width: 18rem;">
            <div class="card-header">{{post.title}}</div>
            <div class="card-body">
                <small class="card-title">{{post.publishedAt|date("d/m/Y")}}</small>
                <div class="card-text">
                    <p>{{post.content}}</p>
                    <small>{{post.comments|length}} commentaire(s)</small>
                </div>
                <a href="{{path("blog_read",{id:post.id})}}">Lire la suite</a>
            </div>
        </div>
    {% endfor %}
    </div>

    <ul>
    {% if page > 1 %}
        <li>
            <a href="{{path("home",{page:1})}}">Première page</a>
        </li>
    {% endif %}
    {% if page > 1 %}
        <li>
            <a href="{{path("home",{page:page - 1})}}">Précédent</a>
        </li>
    {% endif %}
    {% for p in range %}
        <li>
            <a href="{{path("home",{page:p})}}">{{p}}</a>
        </li>
    {% endfor %}
    {% if page < pages %}
        <li>
            <a href="{{path("home",{page:page + 1})}}">Suivant</a>
        </li>
    {% endif %}
    {% if page < pages %}
        <li>
            <a href="{{path("home",{page:pages})}}">Dernière page</a>
        </li>
    {% endif %}
    </ul>   
{% endblock %}
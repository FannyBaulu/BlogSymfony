{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>


    <h1 class="text-center">Blog</h1>
    <div class="d-flex row justify-content-center">
    {% for post in posts %}
        <div class="card border-info m-2 p-0" style="max-width: 18rem;">
            <div class="card-header">{{post.title}}</div>
            <div class="card-body">
                <small class="card-title">{{post.publishedAt|date("d/m/Y")}}</small>
                <div class="card-text">
                    <p>{{post.content}}</p>
                    <small>{{post.comments|length}} commentaire(s)</small>
                </div>
                <a href="{{path("blog_read",{id:post.id})}}">Lire la suite</a>
            </div>
        </div>
    {% endfor %}
    </div>   
{% endblock %}